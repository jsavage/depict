const PLACEHOLDER: &str = indoc!("
    person microwave food: open, start, stop / beep : heat
    person food: stir
");

// --- Application Logic Starts Here ---

// ⭐ New Enum for Application Status
pub enum AppStatus {
    Ready,
    Processing,
    Error(String),
}

pub struct AppProps {
}

pub fn app(cx: Scope<AppProps>) -> Element {

    // 1. State Management
    let model = use_state(&cx, || String::from(PLACEHOLDER));
    let drawing = use_state(&cx, || draw(PLACEHOLDER.into()).unwrap());
    let status = use_state(&cx, || AppStatus::Ready); // ⭐ Status State

    // 2. Asynchronous Processing Coroutine
    let drawing_client = use_coroutine(&cx, |mut rx: UnboundedReceiver<String>| {
        to_owned![drawing, status, model]; // Capture all necessary states
        async move {
            while let Some(current_model) = rx.next().await {
                // Check if the received model is the same as the current UI model state
                // This helps with minor race conditions but is optional.
                // model.set(current_model.clone()); // We update 'model' in the oninput handler now
                status.set(AppStatus::Processing); // ⭐ Set Status: Processing

                let nodes = if current_model.trim().is_empty() {
                    Ok(Ok(Drawing::default()))
                } else {
                    // Wrap the expensive 'draw' operation in catch_unwind
                    catch_unwind(|| {
                        // Assuming 'draw' itself returns a Result in a complete version
                        // We use the basic draw() function here.
                        draw(current_model.clone())
                    })
                };
                
                // ⭐ Detailed Error/Panic Handling
                match nodes {
                    // Case 1: Successful draw and no panic
                    Ok(Ok(drawing_nodes)) => {
                        drawing.set(drawing_nodes);
                        status.set(AppStatus::Ready); // ⭐ Set Status: Ready
                    },
                    // Case 2: Draw failed, but not a panic (if draw returns an explicit error)
                    Ok(Err(draw_err)) => {
                         let error_msg = format!("Diagram compilation error: {:?}", draw_err);
                         status.set(AppStatus::Error(error_msg));
                    },
                    // Case 3: Rust Panic caught by catch_unwind
                    Err(panic_err) => {
                        // Attempt to extract useful info from the panic payload
                        let panic_info = if let Some(s) = panic_err.downcast_ref::<&'static str>() {
                            s.to_string()
                        } else if let Some(s) = panic_err.downcast_ref::<String>() {
                            s.clone()
                        } else {
                            "Unknown panic payload".to_string()
                        };
                        let error_msg = format!("Internal Panic (Check Console for details): {}", panic_info);
                        status.set(AppStatus::Error(error_msg)); // ⭐ Set Status: Error
                    },
                }
            }
        }
    });

    // 3. Dynamic UI Elements
    
    // ⭐ Logic to determine the status label text
    let status_label = match status.get() {
        AppStatus::Ready => "Enter your model below:",
        AppStatus::Processing => "Processing...",
        AppStatus::Error(_) => "ERROR: Check your syntax, select undo, or refer to the examples below",
    };
    
    // Logic to apply a style to the label if it's an error
    let label_style = match status.get() {
        AppStatus::Error(_) => "color: red; font-weight: bold;",
        _ => "color: black;", // Default style for Ready/Processing
    };
    
    let nodes = render(cx, drawing.get().clone());
    let viewbox_width = drawing.viewbox_width;
    let data_svg = as_data_svg(drawing.get().clone(), true);
    let syntax_guide = depict::graph_drawing::frontend::dioxus::syntax_guide(cx)?;

    // 4. Component Render (rsx!)

    cx.render(rsx!{
        // highlight_styles
        div {
            class: "main_editor",
            div {
                // The dynamic label is here
                div {
                    // key: "editor_label",
                    style: "{label_style}", // ⭐ Apply dynamic style
                    status_label // ⭐ Display dynamic label
                }
                div {
                    // key: "editor_editor",
                    textarea {
                        style: "box-sizing: border-box; width: calc(100% - 2em); border-width: 1px; border-color: #000;",
                        rows: "10",
                        autocomplete: "off",
                        "autocapitalize": "off",
                        autofocus: "true",
                        spellcheck: "false",
                        // ⭐ Updated oninput handler
                        oninput: move |e| {
                            event!(Level::TRACE, "INPUT");
                            model.set(e.value.clone()); // Update the model state immediately
                            drawing_client.send(e.value.clone()); // Send to coroutine for processing
                        },
                        "{model}"
                    }
                }
                div {
                    style: "display: flex; flex-direction: row; justify-content: space-between;",
                    syntax_guide,
                    // ... (Tools/Export/Licenses section remains as-is)
                    div {
                        details {
                            style: "display: flex; flex-direction: column; align-self: end; font-size: 0.875rem; line-height: 1.25rem;",
                            summary {
                                span { "Tools" }
                            },
                            div {
                                a {
                                    href: "{data_svg}",
                                    download: "depict.svg",
                                    "Export SVG"
                                }
                            }
                            div {
                                details {
                                    summary {
                                        style: "font-size: 0.875rem; line-height: 1.25rem; --tw-text-opacity: 1; color: rgba(156, 163, 175, var(--tw-text-opacity));",
                                        "Licenses",
                                    },
                                    div {
                                        depict::licenses::LICENSES.dirs().map(|dir| {
                                            let path = dir.path().display();
                                            cx.render(rsx!{
                                                div {
                                                    key: "{path}",
                                                    span {
                                                        style: "font-style: italic; text-decoration: underline;",
                                                        "{path}"
                                                    },
                                                    ul {
                                                        dir.files().map(|f| {
                                                            let file_path = f.path();
                                                            let file_contents = f.contents_utf8().unwrap();
                                                            cx.render(rsx!{
                                                                details {
                                                                    key: "{file_path:?}",
                                                                    style: "white-space: pre;",
                                                                    summary {
                                                                        "{file_path:?}"
                                                                    }
                                                                    "{file_contents}"
                                                                }
                                                            })
                                                        })
                                                    }
                                                }
                                            })
                                        })
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
        // DRAWING
        div {
            class: "content",
            div {
                style: "position: relative; width: {viewbox_width}px; margin-left: auto; margin-right: auto; border-width: 1px; border-color: #000;",
                nodes
            }
        }
    })
}

// --- Main Function (remains as-is) ---

fn main() {
    wasm_logger::init(wasm_logger::Config::default());
    console_error_panic_hook::set_once();

    let window = web_sys::window().unwrap();
    let document = window.document().unwrap();
    let head = document.get_elements_by_tag_name("head").item(0).unwrap();
    let style = document.create_element("style").unwrap();
    style.set_inner_html(DEFAULT_CSS);
    head.append_child(&style).unwrap();

    dioxus_web::launch_with_props(
        app,
        AppProps {
        },
        dioxus_web::Config::new()
    );
}